pipeline {
    agent any

    environment {
        NODE_ENV = 'production'
    }

    tools {
        nodejs 'node-25' // Name of NodeJS installation in Jenkins
    }

    stages {
        stage('Setup System Dependencies') {
            steps {
                // Install libatomic on Ubuntu/Debian agents
                sh '''
                    apt-get update
                    apt-get install -y libatomic1
                '''
            }
        }

        stage('Checkout') {
            steps {
                git branch: 'dev', url: 'https://github.com/trackme-app/TrackMe-Edu.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }
    }
}
