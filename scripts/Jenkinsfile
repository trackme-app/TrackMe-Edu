pipeline {
    agent any

    environment {
        NODE_ENV = 'production'
    }

    tools {
        nodejs 'node-19' // Name of NodeJS installation in Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                // Replace with your repo URL
                git branch: 'dev', url: 'https://github.com/trackme-app/TrackMe-Edu.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }
    }
}
